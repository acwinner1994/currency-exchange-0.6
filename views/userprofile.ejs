      <%}else if(tran.status=="6"){%>
        <p>please give your review</p>
        <a href="/<%=tran._id%>/addone">review</a>
      <%}else if(tran.status=="7"){%>
        <p>transaction end</p>
        <a href="/<%=tran._id%>/archive">archive</a>
      <%}%>
    <%}%>

    <br>
    <br>
  </p>
<% }); %>
